<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:background="@color/color_blue_light"
    android:id="@+id/rl_title"
    android:layout_width="match_parent" android:layout_height="@dimen/comm_navigation_hei">

    <TextView
        android:id="@+id/tv_navi_left"
        android:layout_centerVertical="true"
        android:text="ActionLeft"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_title"
        android:text="Title"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_navi_right"
        android:layout_centerVertical="true"
        android:text="ActionRight"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
